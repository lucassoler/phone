{
  "main": "index.ts",
  "scripts": {
    "start": "npm run build && node build/start.js",
    "local": "NODE_ENV=local nodemon",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watchAll --testPathPattern=\".*/usecases/.*.test.ts\"",
    "test:integration": "NODE_ENV=test jest --watchAll --testPathPattern=\".*/integration/.*.test.ts\"",
    "test:integration:twilio": "NODE_ENV=test jest --watchAll --testPathPattern=\".*/integration/channels/twilio/.*.test.ts\"",
    "clean": "rimraf build/",
    "build": "npm run clean && tsc -p tsconfig.prod.json"
  },
  "jest": {
    "globalSetup": "<rootDir>/configuration/jest.setup.js",
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/supertest": "^2.0.12",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "awesome-phonenumber": "^2.70.0",
    "awilix": "^7.0.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "helmet": "^5.0.2",
    "twilio": "^3.76.1",
    "uuid": "^8.3.2"
  }
}
